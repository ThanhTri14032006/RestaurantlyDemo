@{
    ViewData["Title"] = "Test Booking";
}

<div class="container py-5">
    <h2>Test Booking Details</h2>
    
    <div class="row">
        <div class="col-md-6">
            <h4>Test Direct Booking ID</h4>
            <form method="get" action="/Booking/Confirmation">
                <div class="mb-3">
                    <label for="id" class="form-label">Booking ID:</label>
                    <input type="number" class="form-control" id="id" name="id" value="1">
                </div>
                <button type="submit" class="btn btn-primary">View Booking</button>
            </form>
        </div>
        
        <div class="col-md-6">
            <h4>All Bookings</h4>
            <a href="/Booking/Check" class="btn btn-info">Check All Bookings</a>
        </div>
    </div>
</div>