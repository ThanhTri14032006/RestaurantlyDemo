@model RestaurantMVC.Models.Booking
@{
    ViewData["Title"] = $"Chi tiết đặt bàn #{Model.Id}";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fas fa-receipt me-2"></i>Chi tiết đặt bàn #@Model.Id</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div><strong>Họ tên:</strong> @Model.CustomerName</div>
                            <div><strong>Email:</strong> @Model.Email</div>
                            <div><strong>Điện thoại:</strong> @Model.Phone</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div><strong>Ngày đặt:</strong> @Model.BookingDate.ToString("dd/MM/yyyy")</div>
                            <div><strong>Giờ đặt:</strong> @Model.BookingTime.ToString("HH:mm")</div>
                            <div><strong>Số người:</strong> @Model.PartySize</div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <strong>Yêu cầu đặc biệt:</strong>
                        <div>@(string.IsNullOrWhiteSpace(Model.SpecialRequests) ? "(Không)" : Model.SpecialRequests)</div>
                    </div>

                    <div class="mb-3">
                        <strong>Trạng thái:</strong>
                        <span class="badge bg-secondary">@Model.Status</span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="@Url.Action("Check", "Booking")" class="btn btn-outline-secondary"><i class="fas fa-search me-2"></i>Tra cứu khác</a>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary"><i class="fas fa-home me-2"></i>Trang chủ</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}