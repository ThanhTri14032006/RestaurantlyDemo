@model IEnumerable<RestaurantMVC.Models.MenuItem>
@{
    ViewData["Title"] = "/Admin/Menu";
    Layout = "_AdminLayout";
}

<div class="admin-page">
    <div class="admin-content container-fluid py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-0">
                        <i class="fas fa-utensils me-2 text-primary"></i>
                        Quản lý thực đơn
                    </h1>
                    <p class="text-muted mb-0">Quản lý tất cả món ăn trong thực đơn nhà hàng</p>
                </div>
                <div>
                    <a href="@Url.Action("CreateMenuItem", "Admin")" class="btn btn-success me-2">
                        <i class="fas fa-plus me-2"></i>Thêm món mới
                    </a>
                    <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Quay lại Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="text-white-50 small">Tổng món ăn</div>
                            <div class="h5 mb-0">@Model.Count()</div>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-utensils fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="text-white-50 small">Đang phục vụ</div>
                            <div class="h5 mb-0">@Model.Count(m => m.IsAvailable)</div>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-check-circle fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="text-white-50 small">Tạm ngưng</div>
                            <div class="h5 mb-0">@Model.Count(m => !m.IsAvailable)</div>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-pause-circle fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="text-white-50 small">Giá trung bình</div>
                            <div class="h5 mb-0">@(Model.Any() ? Model.Average(m => m.Price).ToString("N0") : "0")₫</div>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-dollar-sign fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-filter me-2"></i>Bộ lọc
                    </h6>
                </div>
                <div class="card-body">
                    <form method="get" id="filterForm">
                        <div class="row">
                            <div class="col-md-3 mb-3">
                                <label class="form-label">Danh mục</label>
                                <select name="category" class="form-select" onchange="document.getElementById('filterForm').submit()">
                                    <option value="">Tất cả danh mục</option>
                                    <option value="Appetizer" selected="@(ViewBag.CurrentCategory == "Appetizer")">Khai vị</option>
                                    <option value="Main Course" selected="@(ViewBag.CurrentCategory == "Main Course")">Món chính</option>
                                    <option value="Dessert" selected="@(ViewBag.CurrentCategory == "Dessert")">Tráng miệng</option>
                                    <option value="Drink" selected="@(ViewBag.CurrentCategory == "Drink")">Đồ uống</option>
                                </select>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label class="form-label">Trạng thái</label>
                                <select name="availability" class="form-select" onchange="document.getElementById('filterForm').submit()">
                                    <option value="">Tất cả trạng thái</option>
                                    <option value="true" selected="@(ViewBag.CurrentAvailability == "true")">Đang phục vụ</option>
                                    <option value="false" selected="@(ViewBag.CurrentAvailability == "false")">Tạm ngưng</option>
                                </select>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label class="form-label">Khoảng giá</label>
                                <select name="priceRange" class="form-select" onchange="document.getElementById('filterForm').submit()">
                                    <option value="">Tất cả giá</option>
                                    <option value="0-100000" selected="@(ViewBag.CurrentPriceRange == "0-100000")">Dưới 100,000₫</option>
                                    <option value="100000-300000" selected="@(ViewBag.CurrentPriceRange == "100000-300000")">100,000₫ - 300,000₫</option>
                                    <option value="300000-500000" selected="@(ViewBag.CurrentPriceRange == "300000-500000")">300,000₫ - 500,000₫</option>
                                    <option value="500000-999999999" selected="@(ViewBag.CurrentPriceRange == "500000-999999999")">Trên 500,000₫</option>
                                </select>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label class="form-label">Tìm kiếm</label>
                                <div class="input-group">
                                    <input type="text" name="search" class="form-control" 
                                           placeholder="Tên món ăn..." value="@ViewBag.SearchTerm">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Menu Items -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-list me-2"></i>Danh sách món ăn
                        @if (Model.Any())
                        {
                            <span class="badge bg-secondary ms-2">@Model.Count() món</span>
                        }
                    </h6>
                </div>
                <div class="card-body">
                    <form method="post" action="@Url.Action("ActivateAllMenuItems", "Admin")" class="mb-3">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-outline-success">
                            <i class="fas fa-check-circle me-2"></i>Kích hoạt tất cả món
                        </button>
                    </form>
                    <form method="post" action="@Url.Action("FixMissingImages", "Admin")" class="mb-3">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-outline-warning">
                            <i class="fas fa-image me-2"></i>Sửa ảnh lỗi (đặt placeholder)
                        </button>
                    </form>
                    @if (Model.Any())
                    {
                        <div class="row">
                            @foreach (var item in Model.OrderBy(m => m.Category).ThenBy(m => m.Name))
                            {
                                <div class="col-lg-4 col-md-6 mb-4">
                                    <div class="card h-100 menu-item-card @(!item.IsAvailable ? "unavailable" : "")">
                                        <div class="position-relative">
                                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                                            {
                                                <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" style="height: 200px; object-fit: cover;"
                                                     onerror="this.onerror=null; this.src='https://via.placeholder.com/300x200?text='+encodeURIComponent('@item.Name');">
                                            }
                                            else
                                            {
                                                <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                                    <i class="fas fa-utensils fa-3x text-muted"></i>
                                                </div>
                                            }
                                            
                                            <!-- Status Badge -->
                                            <div class="position-absolute top-0 end-0 m-2">
                                                @if (item.IsAvailable)
                                                {
                                                    <span class="badge bg-success">Đang phục vụ</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">Tạm ngưng</span>
                                                }
                                            </div>

                                            <!-- Category Badge -->
                                            <div class="position-absolute top-0 start-0 m-2">
                                                <span class="badge bg-primary">@item.Category</span>
                                            </div>
                                        </div>
                                        
                                        <div class="card-body d-flex flex-column">
                                            <h5 class="card-title">@item.Name</h5>
                                            <p class="card-text text-muted flex-grow-1">
                                                @if (!string.IsNullOrEmpty(item.Description))
                                                {
                                                    @(item.Description.Length > 100 ? item.Description.Substring(0, 100) + "..." : item.Description)
                                                }
                                                else
                                                {
                                                    <em>Chưa có mô tả</em>
                                                }
                                            </p>
                                            
                                            <div class="d-flex justify-content-between align-items-center mb-3">
                                                <span class="h5 text-primary mb-0">@item.Price.ToString("N0")₫</span>
                                                <small class="text-muted">
                                                    <i class="fas fa-calendar me-1"></i>
                                                    @item.CreatedAt.ToString("dd/MM/yyyy")
                                                </small>
                                            </div>
                                            
                                            <div class="btn-group w-100" role="group">
                                                <a href="@Url.Action("EditMenuItem", "Admin", new { id = item.Id })" 
                                                   class="btn btn-outline-primary btn-sm">
                                                    <i class="fas fa-edit me-1"></i>Sửa
                                                </a>
                                                
                                                <button type="button" class="btn btn-outline-@(item.IsAvailable ? "warning" : "success") btn-sm"
                                                        onclick="toggleAvailability(@item.Id, @item.IsAvailable.ToString().ToLower())">
                                                    <i class="fas fa-@(item.IsAvailable ? "pause" : "play") me-1"></i>
                                                    @(item.IsAvailable ? "Tạm ngưng" : "Kích hoạt")
                                                </button>
                                                
                                                <button type="button" class="btn btn-outline-danger btn-sm"
                                                        onclick="deleteMenuItem(@item.Id, '@item.Name')">
                                                    <i class="fas fa-trash me-1"></i>Xóa
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-utensils fa-4x text-muted mb-3"></i>
                            <h5 class="text-muted">Không tìm thấy món ăn nào</h5>
                            <p class="text-muted">Thử thay đổi bộ lọc hoặc thêm món ăn mới</p>
                            <a href="@Url.Action("CreateMenuItem", "Admin")" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i>Thêm món mới
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    </div>
</div>

<script>
function toggleAvailability(itemId, currentStatus) {
    const action = currentStatus ? 'tạm ngưng phục vụ' : 'kích hoạt';
    
    if (confirm(`Bạn có chắc chắn muốn ${action} món ăn này?`)) {
        // Create a form and submit it
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = '@Url.Action("ToggleMenuItemAvailability", "Admin")';
        
        const idInput = document.createElement('input');
        idInput.type = 'hidden';
        idInput.name = 'id';
        idInput.value = itemId;
        
        // Add anti-forgery token
        const tokenInput = document.createElement('input');
        tokenInput.type = 'hidden';
        tokenInput.name = '__RequestVerificationToken';
        tokenInput.value = document.querySelector('input[name="__RequestVerificationToken"]')?.value || '';
        
        form.appendChild(idInput);
        form.appendChild(tokenInput);
        
        document.body.appendChild(form);
        form.submit();
    }
}

function deleteMenuItem(itemId, itemName) {
    if (confirm(`Bạn có chắc chắn muốn xóa món "${itemName}"?\n\nHành động này không thể hoàn tác!`)) {
        // Create a form and submit it
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = '@Url.Action("DeleteMenuItem", "Admin")';
        
        const idInput = document.createElement('input');
        idInput.type = 'hidden';
        idInput.name = 'id';
        idInput.value = itemId;
        
        // Add anti-forgery token
        const tokenInput = document.createElement('input');
        tokenInput.type = 'hidden';
        tokenInput.name = '__RequestVerificationToken';
        tokenInput.value = document.querySelector('input[name="__RequestVerificationToken"]')?.value || '';
        
        form.appendChild(idInput);
        form.appendChild(tokenInput);
        
        document.body.appendChild(form);
        form.submit();
    }
}

document.addEventListener('DOMContentLoaded', function() {
    // Add hover effects to menu item cards
    const cards = document.querySelectorAll('.menu-item-card');
    cards.forEach(card => {
        card.addEventListener('mouseenter', function() {
            if (!this.classList.contains('unavailable')) {
                this.style.transform = 'translateY(-5px)';
                this.style.boxShadow = '0 8px 25px rgba(0,0,0,0.15)';
            }
        });
        
        card.addEventListener('mouseleave', function() {
            this.style.transform = 'translateY(0)';
            this.style.boxShadow = '';
        });
    });
});
</script>

<style>
.menu-item-card {
    transition: all 0.3s ease;
    border: 1px solid #e3e6f0;
}

.menu-item-card.unavailable {
    opacity: 0.7;
    background-color: #f8f9fa;
}

.menu-item-card.unavailable .card-img-top {
    filter: grayscale(50%);
}

.btn-group .btn {
    flex: 1;
}

.card-img-top {
    transition: all 0.3s ease;
}

.menu-item-card:hover .card-img-top {
    transform: scale(1.05);
}

.badge {
    font-size: 0.75em;
}

.position-absolute .badge {
    z-index: 10;
}

@@media (max-width: 768px) {
    .btn-group {
        flex-direction: column;
    }
    
    .btn-group .btn {
        margin-bottom: 5px;
        border-radius: 0.375rem !important;
    }
    
    .btn-group .btn:last-child {
        margin-bottom: 0;
    }
}

.card-body {
    padding: 1.25rem;
}

.text-primary {
    color: #4e73df !important;
}

.bg-primary {
    background-color: #4e73df !important;
}
</style>