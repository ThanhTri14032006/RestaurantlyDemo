@model RestaurantMVC.Models.Order
@{
    ViewData["Title"] = "Chi tiết Đơn hàng #" + Model.Id;
    Layout = "_AdminLayout";
}

<div class="admin-page">
    <section class="admin-hero">
        <h1 class="h2 mb-1">Chi tiết Đơn hàng #@Model.Id</h1>
        <p class="text-muted">Xem và cập nhật trạng thái đơn hàng.</p>
    </section>
    <div class="admin-content container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">Chi tiết Đơn hàng #@Model.Id</h3>
                    <a href="@Url.Action("Orders")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Quay lại
                    </a>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Order Information -->
                        <div class="col-md-6">
                            <h5>Thông tin đơn hàng</h5>
                            <table class="table table-borderless">
                                <tr>
                                    <td><strong>Mã đơn hàng:</strong></td>
                                    <td>#@Model.Id</td>
                                </tr>
                                <tr>
                                    <td><strong>Khách hàng:</strong></td>
                                    <td>@Model.CustomerName</td>
                                </tr>
                                <tr>
                                    <td><strong>Email:</strong></td>
                                    <td>@Model.Email</td>
                                </tr>
                                <tr>
                                    <td><strong>Số điện thoại:</strong></td>
                                    <td>@Model.Phone</td>
                                </tr>
                                <tr>
                                    <td><strong>Loại đơn hàng:</strong></td>
                                    <td>
                                        <span class="badge bg-info">
                                            @(Model.OrderType == RestaurantMVC.Models.OrderType.Delivery ? "Giao hàng" : "Mang về")
                                        </span>
                                    </td>
                                </tr>
                                @if (Model.OrderType == RestaurantMVC.Models.OrderType.Delivery && !string.IsNullOrEmpty(Model.DeliveryAddress))
                                {
                                    <tr>
                                        <td><strong>Địa chỉ giao hàng:</strong></td>
                                        <td>@Model.DeliveryAddress</td>
                                    </tr>
                                }
                                <tr>
                                    <td><strong>Trạng thái:</strong></td>
                                    <td>
                                        <span class="badge @GetStatusBadgeClass(Model.Status)">
                                            @GetStatusText(Model.Status)
                                        </span>
                                    </td>
                                </tr>
                                <tr>
                                    <td><strong>Ngày tạo:</strong></td>
                                    <td>@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                </tr>
                                <tr>
                                    <td><strong>Cập nhật lần cuối:</strong></td>
                                    <td>@Model.UpdatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                </tr>
                                @if (!string.IsNullOrEmpty(Model.Notes))
                                {
                                    <tr>
                                        <td><strong>Ghi chú:</strong></td>
                                        <td>@Model.Notes</td>
                                    </tr>
                                }
                            </table>
                        </div>

                        <!-- Order Items -->
                        <div class="col-md-6">
                            <h5>Chi tiết món ăn</h5>
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Món ăn</th>
                                            <th>Số lượng</th>
                                            <th>Đơn giá</th>
                                            <th>Thành tiền</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.OrderItems)
                                        {
                                            <tr>
                                                <td>@item.MenuItem.Name</td>
                                                <td>@item.Quantity</td>
                                                <td>@item.UnitPrice.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</td>
                                                <td>@item.TotalPrice.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</td>
                                            </tr>
                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr class="table-active">
                                            <th colspan="3">Tổng cộng:</th>
                                            <th>@Model.TotalAmount.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>

                    <!-- Status Update Form -->
                    <div class="row mt-4">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header">
                                    <h6 class="card-title">Cập nhật trạng thái đơn hàng</h6>
                                </div>
                                <div class="card-body">
                                    <form method="post" action="@Url.Action("UpdateOrderStatus")">
                                        <input type="hidden" name="id" value="@Model.Id" />
                                        <div class="row">
                                            <div class="col-md-4">
                                                <select name="status" class="form-select" required>
                                                    <option value="">Chọn trạng thái</option>
                                                    <option value="Pending" selected="@(Model.Status == RestaurantMVC.Models.OrderStatus.Pending)">Chờ xử lý</option>
                                                    <option value="Confirmed" selected="@(Model.Status == RestaurantMVC.Models.OrderStatus.Confirmed)">Đã xác nhận</option>
                                                    <option value="Preparing" selected="@(Model.Status == RestaurantMVC.Models.OrderStatus.Preparing)">Đang chuẩn bị</option>
                                                    <option value="Ready" selected="@(Model.Status == RestaurantMVC.Models.OrderStatus.Ready)">Sẵn sàng</option>
                                                    <option value="Delivered" selected="@(Model.Status == RestaurantMVC.Models.OrderStatus.Delivered)">Đã giao</option>
                                                    <option value="Cancelled" selected="@(Model.Status == RestaurantMVC.Models.OrderStatus.Cancelled)">Đã hủy</option>
                                                </select>
                                            </div>
                                            <div class="col-md-6">
                                                <input type="text" name="notes" class="form-control" placeholder="Ghi chú (tùy chọn)" value="@Model.Notes" />
                                            </div>
                                            <div class="col-md-2">
                                                <button type="submit" class="btn btn-primary">Cập nhật</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
</div>

@functions {
    string GetStatusBadgeClass(RestaurantMVC.Models.OrderStatus status)
    {
        return status switch
        {
            RestaurantMVC.Models.OrderStatus.Pending => "bg-warning",
            RestaurantMVC.Models.OrderStatus.Confirmed => "bg-info",
            RestaurantMVC.Models.OrderStatus.Preparing => "bg-primary",
            RestaurantMVC.Models.OrderStatus.Ready => "bg-success",
            RestaurantMVC.Models.OrderStatus.Delivered => "bg-success",
            RestaurantMVC.Models.OrderStatus.Cancelled => "bg-danger",
            _ => "bg-secondary"
        };
    }

    string GetStatusText(RestaurantMVC.Models.OrderStatus status)
    {
        return status switch
        {
            RestaurantMVC.Models.OrderStatus.Pending => "Chờ xử lý",
            RestaurantMVC.Models.OrderStatus.Confirmed => "Đã xác nhận",
            RestaurantMVC.Models.OrderStatus.Preparing => "Đang chuẩn bị",
            RestaurantMVC.Models.OrderStatus.Ready => "Sẵn sàng",
            RestaurantMVC.Models.OrderStatus.Delivered => "Đã giao",
            RestaurantMVC.Models.OrderStatus.Cancelled => "Đã hủy",
            _ => "Không xác định"
        };
    }
}