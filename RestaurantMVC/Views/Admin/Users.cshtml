@model IEnumerable<RestaurantMVC.Models.User>
@{
    ViewData["Title"] = "/Admin/Users";
    Layout = "_AdminLayout";
}

<div class="admin-page">
    <div class="admin-content container-fluid py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-0">
                        <i class="fas fa-users me-2 text-primary"></i>
                        Quản lý Người dùng
                    </h1>
                    <p class="text-muted mb-0">Tìm kiếm, chỉnh sửa và quản lý tài khoản</p>
                </div>
                <div class="page-actions">
                    <a href="@Url.Action("CreateUser")" class="btn btn-success me-2">
                        <i class="fas fa-plus me-2"></i>Thêm người dùng
                    </a>
                    <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Quay lại Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-filter me-2"></i>Bộ lọc
                    </h6>
                    <div>
                        <a href="@Url.Action("Users")" class="btn btn-outline-secondary btn-sm">Xóa lọc</a>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Filter Form -->
                    <form method="get" class="mb-4">
                        <div class="row">
                            <div class="col-md-3">
                                <input type="text" name="search" class="form-control" placeholder="Tìm kiếm theo tên, email..." value="@ViewBag.SearchTerm" />
                            </div>
                            <div class="col-md-3">
                                <select name="role" class="form-select">
                                    <option value="">Tất cả vai trò</option>
                                    @if (ViewBag.SelectedRole == "Admin")
                                    {
                                        <option value="Admin" selected>Admin</option>
                                        <option value="Customer">Khách hàng</option>
                                    }
                                    else if (ViewBag.SelectedRole == "Customer")
                                    {
                                        <option value="Admin">Admin</option>
                                        <option value="Customer" selected>Khách hàng</option>
                                    }
                                    else
                                    {
                                        <option value="Admin">Admin</option>
                                        <option value="Customer">Khách hàng</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-3">
                                <select name="isActive" class="form-select">
                                    <option value="">Tất cả trạng thái</option>
                                    <option value="true" selected="@(ViewBag.SelectedActive == "true")">Hoạt động</option>
                                    <option value="false" selected="@(ViewBag.SelectedActive == "false")">Bị khóa</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <button type="submit" class="btn btn-primary">Tìm kiếm</button>
                                <a href="@Url.Action("Users")" class="btn btn-secondary">Xóa lọc</a>
                            </div>
                        </div>
                    </form>

                    <!-- Users Table -->
                    <div class="table-responsive">
                        <table class="table table-hover" data-enhance="true" data-page-size="10">
                            <thead class="table-light">
                                <tr>
                                    <th>ID</th>
                                    <th>Thông tin</th>
                                    <th>Vai trò</th>
                                    <th>Ngày tạo</th>
                                    <th>Trạng thái</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Any())
                                {
                                    @foreach (var user in Model)
                                    {
                                        <tr>
                                            <td>@user.Id</td>
                                            <td>
                                                <div>
                                                    <strong>@user.FullName</strong><br>
                                                    <small class="text-muted">@user.Email</small>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge @(user.Role == RestaurantMVC.Models.UserRole.Admin ? "bg-danger" : "bg-primary")">
                                    @(user.Role == RestaurantMVC.Models.UserRole.Admin ? "Quản trị viên" : "Khách hàng")
                                </span>
                                            </td>
                                            <td>@user.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td>
                                                @if (user.IsActive)
                                                {
                                                    <span class="badge bg-success">Hoạt động</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Bị khóa</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("EditUser", new { id = user.Id })" class="btn btn-sm btn-outline-primary" title="Chỉnh sửa">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <form method="post" action="@Url.Action("ToggleUserStatus")" style="display: inline;">
                                                        <input type="hidden" name="id" value="@user.Id" />
                                                        @if (user.IsActive)
                                                        {
                                                            <button type="submit" class="btn btn-sm btn-outline-secondary" title="Khóa tài khoản" onclick="return confirm('Bạn có chắc chắn muốn khóa tài khoản này?')">
                                                                <i class="fas fa-lock"></i>
                                                            </button>
                                                        }
                                                        else
                                                        {
                                                            <button type="submit" class="btn btn-sm btn-outline-success" title="Kích hoạt tài khoản">
                                                                <i class="fas fa-unlock"></i>
                                                            </button>
                                                        }
                                                    </form>
                                                    @if (user.Role != RestaurantMVC.Models.UserRole.Admin)
                                                    {
                                                        <form method="post" action="@Url.Action("DeleteUser")" style="display: inline;" onsubmit="return confirm('Bạn có chắc chắn muốn xóa người dùng này? Hành động này không thể hoàn tác.')">
                                                            <input type="hidden" name="id" value="@user.Id" />
                                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Xóa">
                                                                <i class="fas fa-trash"></i>
                                                            </button>
                                                        </form>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" class="text-center">Không có người dùng nào.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Statistics -->
                    <div class="row mt-4">
                        <div class="col-md-3">
                            <div class="card bg-primary text-white">
                                <div class="card-body">
                                    <h5>Tổng người dùng</h5>
                                    <h3>@ViewBag.TotalUsers</h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-danger text-white">
                                <div class="card-body">
                                    <h5>Quản trị viên</h5>
                                    <h3>@ViewBag.AdminUsers</h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-info text-white">
                                <div class="card-body">
                                    <h5>Khách hàng</h5>
                                    <h3>@ViewBag.CustomerUsers</h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-success text-white">
                                <div class="card-body">
                                    <h5>Đang hoạt động</h5>
                                    <h3>@ViewBag.ActiveUsers</h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
</div>