@model RestaurantMVC.Models.BlogEntry
@{
    ViewData["Title"] = "/Admin/EditBlogEntry";
    Layout = "_AdminLayout";
}

<div class="admin-page">
    <header class="admin-hero">
        <div class="container">
            <div class="hero-content d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="hero-title"><i class="fas fa-edit me-2"></i> Sửa bài viết</h1>
                    <p class="lead">Chỉnh sửa nội dung và thông tin bài viết</p>
                </div>
                <div class="hero-actions d-flex gap-2">
                    <a class="btn btn-secondary" href="@Url.Action("Blog")">
                        <i class="fas fa-arrow-left me-2"></i>Quay lại danh sách
                    </a>
                </div>
            </div>
        </div>
    </header>

    <div class="container py-4">
        <div class="row">
            <div class="col-lg-10 mx-auto">
                <div class="card shadow">
                    <div class="card-header">
                        <h5 class="mb-0">Thông tin bài viết</h5>
                    </div>
                    <div class="card-body">
                        <form asp-action="EditBlogEntry" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="mb-3">
            <label class="form-label">Tiêu đề</label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Tóm tắt</label>
            <input asp-for="Excerpt" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Nội dung</label>
            <textarea asp-for="Content" class="form-control" rows="8"></textarea>
        </div>
        <div class="mb-3">
            <label class="form-label">Ảnh (URL)</label>
            <input asp-for="ImageUrl" class="form-control" />
        </div>
        <div class="row">
            <div class="col-md-6 mb-3">
                <label class="form-label">Ngày đăng</label>
                <input asp-for="PublishedAt" type="datetime-local" class="form-control" />
            </div>
            <div class="col-md-6 mb-3">
                <label class="form-label">Tác giả</label>
                <input asp-for="Author" class="form-control" />
            </div>
        </div>
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save me-2"></i>Cập nhật
            </button>
            <a class="btn btn-secondary" href="@Url.Action("Blog")">Hủy</a>
        </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>