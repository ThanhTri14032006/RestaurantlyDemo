@model RestaurantMVC.Models.AboutSettingsViewModel
@{
    ViewData["Title"] = "/Admin/AboutSettings";
    Layout = "_AdminLayout";
}

<div class="admin-page">
    <header class="admin-hero">
        <div class="container">
            <div class="hero-content d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="hero-title"><i class="fas fa-info-circle me-2"></i> Quản trị About</h1>
                    <p class="lead">Chỉnh sửa nội dung trang giới thiệu</p>
                </div>
                <div class="hero-actions d-flex gap-2">
                    <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Quay lại Dashboard
                    </a>
                    <a href="@Url.Action("About", "Home")" class="btn btn-outline-primary">
                        <i class="fas fa-eye me-2"></i>Xem trang About
                    </a>
                </div>
            </div>
        </div>
    </header>

    <section class="py-4">
        <div class="container">
            <div class="row">
                <div class="col-lg-9 mx-auto">
                    <div class="card shadow">
                        <div class="card-header">
                            <h5 class="mb-0">Quản trị nội dung trang About</h5>
                        </div>
                        <div class="card-body">

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">@TempData["Success"]</div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }

        <form asp-action="AboutSettings" method="post">
            <div class="mb-3">
                <label class="form-label">Tiêu đề</label>
                <input asp-for="Title" class="form-control" />
            </div>
            <div class="mb-3">
                <label class="form-label">Phần dẫn</label>
                <textarea asp-for="Lead" rows="2" class="form-control"></textarea>
            </div>
            <div class="mb-3">
                <label class="form-label">Câu chuyện 1</label>
                <textarea asp-for="Story1" rows="3" class="form-control"></textarea>
            </div>
            <div class="mb-3">
                <label class="form-label">Câu chuyện 2</label>
                <textarea asp-for="Story2" rows="3" class="form-control"></textarea>
            </div>
            <div class="mb-3">
                <label class="form-label">Câu chuyện 3</label>
                <textarea asp-for="Story3" rows="3" class="form-control"></textarea>
            </div>
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>Lưu thay đổi
                </button>
                <a href="@Url.Action("About", "Home")" class="btn btn-outline-secondary">Xem trang About</a>
            </div>
        </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>