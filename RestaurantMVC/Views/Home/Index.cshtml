@{
    ViewData["Title"] = "Trang chủ";
}

<!-- Hero: Dark Wood + Bold Headline -->
<section class="home-hero text-white">
    <div class="container py-5">
        <div class="row align-items-center g-4">
            <div class="col-lg-6">
                <h1 class="display-3 fw-bold lh-1">
                    We only serve delicious dishes<br />
                    <span class="text-highlight"></span>
                </h1>
                <p class="lead mt-3 text-white-50">Our passion is food. Reserve now and enjoy true quality.</p>
                <a href="@Url.Action("Index", "Booking")" class="btn btn-accent btn-lg mt-3">MAKE A RESERVATION</a>
            </div>
            <div class="col-lg-6">
                <div class="hero-media shadow-lg">
                    <img src="https://images.unsplash.com/photo-1544025162-d76694265947?q=80&w=1400&auto=format&fit=crop"
                        alt="Restaurant interior" />
                    <div class="play-badge"><i class="fas fa-play"></i></div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Quote Section -->
<section class="home-quote text-center text-white">
    <div class="container py-5">
        <div class="quote-mark">❝</div>
        <p class="lead mb-3">A new dish brings more joy to mankind than a new star.</p>
        <div class="quote-author">Anthelme Brillat-Savarin</div>
        <div class="quote-divider"><span>*</span></div>
    </div>
</section>

<!-- Story Section -->
<section class="home-story text-white">
    <div class="container py-5">
        <div class="row g-5 align-items-center">
            <div class="col-lg-5 position-relative">
                <div class="story-bg"></div>
                <div class="story-plate shadow-lg">
                    <img src="https://images.unsplash.com/photo-1544025162-d76694265947?q=80&w=1200&auto=format&fit=crop"
                        alt="Steak plate" />
                </div>
            </div>
            <div class="col-lg-7">
                <div class="section-eyebrow">The Story Behind Us</div>
                <h2 class="display-5 fw-bold mb-3">The Story</h2>
                <p class="text-white-50 mb-4">Restaurantly brings the essence of Vietnamese cuisine to life in a modern
                    and cozy space. Each dish tells a story, and every meal creates a memory..</p>
                <div class="row g-3 mb-4">
                    <div class="col-sm-6"><i class="fas fa-check-circle me-2 text-accent"></i>Fine Dining</div>
                    <div class="col-sm-6"><i class="fas fa-check-circle me-2 text-accent"></i>Food Catering</div>
                    <div class="col-sm-6"><i class="fas fa-check-circle me-2 text-accent"></i>Food Delivery</div>
                    <div class="col-sm-6"><i class="fas fa-check-circle me-2 text-accent"></i>Wedding Ceremony</div>
                </div>
                <a class="btn btn-outline-accent" href="@Url.Action("About", "Home")">Learn More</a>
            </div>
        </div>
    </div>
</section>

<!-- Specials Menu Section -->
<section class="home-specials text-white">
    <div class="container py-5">
        <div class="section-eyebrow">This week</div>
        <h2 class="display-5 fw-bold mb-4">Specials Menu</h2>
        <div class="row g-4">
            <div class="col-lg-6">
                <ul class="special-list">
                    @if (ViewBag.FeaturedItems != null &&
                                        ((List<RestaurantMVC.Models.MenuItem>)ViewBag.FeaturedItems).Any())
                    {
                        foreach (var item in (List<RestaurantMVC.Models.MenuItem>)ViewBag.FeaturedItems)
                        {
                            <li>
                                <div class="name">@item.Name</div>
                                <div class="dots"></div>
                                <div class="price">@item.Price.ToString("N0")</div>
                                <div class="sub">@item.Category</div>
                            </li>
                        }
                    }
                    else
                    {
                        <li>
                            <div class="name">Citrus Cured Salmon With Honey</div>
                            <div class="dots"></div>
                            <div class="price">20</div>
                            <div class="sub">Salmon / Citrus / Honey / Spice</div>
                        </li>
                        <li>
                            <div class="name">Pork Tenderloin In Yogurt</div>
                            <div class="dots"></div>
                            <div class="price">25</div>
                            <div class="sub">Pork / Tenderloin / Yogurt</div>
                        </li>
                        <li>
                            <div class="name">Grilled Pork With Lemons</div>
                            <div class="dots"></div>
                            <div class="price">27</div>
                            <div class="sub">Pork / Lemon / Onions</div>
                        </li>
                        <li>
                            <div class="name">Roasted Prawns with Coriander</div>
                            <div class="dots"></div>
                            <div class="price">18</div>
                            <div class="sub">Prawn / Coriander / Spices</div>
                        </li>
                    }
                </ul>
            </div>
            <div class="col-lg-6">
                <div class="special-grid">
                    <img src="https://images.unsplash.com/photo-1517248135467-4c7edcad34c4?q=80&w=1400&auto=format&fit=crop"
                        alt="Special 1" />
                    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSDtsi8A7SRD5KN4RoxoSKv5o3Cg3eFkrb3KQ&s"
                        alt="Special 2" />
                    <img src="https://images.unsplash.com/photo-1544025162-d76694265947?q=80&w=1200&auto=format&fit=crop"
                        alt="Special 3" />
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Banner: Best Quality Foods -->
<section class="home-banner text-center text-white">
    <div class="banner-overlay">
        <h2 class="display-4 fw-bold">Best Quality Foods</h2>
        <div class="quote-divider mt-3"><span>*</span></div>
    </div>
</section>

